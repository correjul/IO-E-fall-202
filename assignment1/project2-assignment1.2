function draw() {
  
  let v = map(diameter2, 0, 1023, 1, 0);
  song.volume(v);
  
  amp.setInput(song);
  var vol = amp.getLevel() * 1000;
  console.log(diameter3);

  if (diameter1 <= 17) {
    c = map(vol, 0, 115, 166, 266);
  } else if (diameter1 > 17) {
    c = map(vol, 0, 115, 0, 66);
  } 

  if (diameter0 == 1) {
    w = random(width);
    h = random(height);
    w2 = random(width);
    h2 = random(height);
  }
   
  colorMode(HSB);
  noStroke();
  fill(c, 255, diameter3);
  ellipse(w, h, vol * 4);

  noStroke();
  fill(c, 255, diameter3);
  ellipse(w2, h2, vol * 4);

  
  background(0, 0.2);
  fill(255);
  text("Try experimenting with the butoon, dial, light sensor, and temperature sensor", 10, 20);
 
}


